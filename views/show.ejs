<% layout('layouts/boilerplate') -%>
<body>
  <div class="show_page">
    <h2 class="heading_2 eventh">Event details</h2>
    <p class="abt_para "><%= event.eventDescription %></p>
    <h4 class="abt_para eventh"><b><i class="fa-regular fa-calendar"></i>&ThickSpace; <%= event.eventDate %></b></h4>
    <h4 class="abt_para eventh"><b><i class="fa-solid fa-location-dot"></i>&ThickSpace; <%= event.eventVenue %></b></h4>
    <h2 class="heading_2 eventh" >Photographs</h2>
    
    <div class="row row-cols-lg-2 row-cols-sm-1 g-4 grid" >
        <% for(let i=0;i<event.eventPhotographs.length;i++) {%>
        <div class="col">
          <div class="d-flex justify-content-center">
          <div class="card h-100 card_allevent ">
            <img src="/eventimages/<%= event.eventPhotographs[i].photoData %>" alt="" class="all_event_img">
            <div class="card-body">
              <p class="card-text"><%= event.eventPhotographs[i].photoname %></p>
            </div>
          </div>
        </div>
      </div>
        <% } %> 
    </div>
  </div>
 </body>
    
        
      

